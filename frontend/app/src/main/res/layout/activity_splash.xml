<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorConceptWhite"
    tools:context=".src.SplashActivity.SplashActivity">

    <ImageView
        android:id="@+id/login_iv_icon"
        android:src="@drawable/hand_writing_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="250dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"/>

    <ImageView
        android:id="@+id/login_iv_flower"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@id/login_tv_login"
        app:layout_constraintRight_toRightOf="@id/login_tv_login"
        android:src="@drawable/flower_deco"/>

    <TextView
        android:id="@+id/login_tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_iv_icon"
        app:layout_constraintBottom_toTopOf="@id/login_tv_register"
        android:text="@string/login"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/mediumfont"
        android:gravity="center"
        android:textSize="32sp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/dark_line_to_full_selector"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/login_tv_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:text="@string/register"
        android:fontFamily="@font/mediumfont"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="120dp"
        android:gravity="center"
        android:textSize="32sp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/dark_line_to_full_selector"/>





</androidx.constraintlayout.widget.ConstraintLayout>