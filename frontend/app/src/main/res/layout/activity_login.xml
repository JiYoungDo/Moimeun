<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorConceptWhite"
    tools:context=".src.LoginActivity.LoginActivity">

    <ImageView
        android:id="@+id/login_iv_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_back_arrow"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/login_iv_flower"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        android:src="@drawable/flower_deco" />

    <EditText
        android:id="@+id/login_et_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_iv_flower"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/darkgreen_line_bg"
        android:hint="@string/id"
        android:textColorHint="@color/colorConceptDarkGreen"
        android:textColor="@color/colorBlack"
        android:padding="20dp"
        android:gravity="center"
        android:fontFamily="@font/mediumfont"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/login_et_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_et_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/darkgreen_line_bg"
        android:hint="@string/pw"
        android:textColorHint="@color/colorConceptDarkGreen"
        android:textColor="@color/colorBlack"
        android:padding="20dp"
        android:gravity="center"
        android:fontFamily="@font/mediumfont"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/login_tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_et_pw"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/all_dark_green_roung_bg"
        android:textColor="@color/colorConceptWhite"
        android:text="@string/login"
        android:gravity="center"
        android:padding="20dp"
        android:fontFamily="@font/mediumfont"
        android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>